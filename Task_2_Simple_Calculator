#include<iostream>
using namespace std;
int main(){
    int a,b,c;
    float d;
    char ch;
    cout<<"Enter two numbers:";
    cin>>a;
    cin>>b;
    cout<<"Enter arithmetic operation to perfrom:"<<endl;
    cout<<"Enter + for Addition"<<endl;
    cout<<"Enter - for Subraction"<<endl;
    cout<<"Enter * for Multiplication"<<endl;
    cout<<"Enter / for Division"<<endl;
    cin>>ch;
    switch(ch){
        case '+':
        c=a+b;
        cout<<"Addition of a and b is:"<<c;
        break;
        case '-':
        c=a-b;
        cout<<"Subraction of a and b is:"<<c;
        break;
        case '*':
        c=a*b;
        cout<<"Multiplication of a and b is:"<<c;
        break;
        case '/':
        if(b==0){
            cout<<"undefined";
        }
        else{
            d=(float)a/b;
            cout<<"Division of a and b is:"<<d;
       }
        break;
        default:
        cout<<"Invaild operator";
        break;

    }

}
