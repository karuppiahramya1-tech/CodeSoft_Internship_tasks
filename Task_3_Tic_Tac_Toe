#include<iostream>
using namespace std;
int main(){
    char a[3][3];
    int i,j;
    int r,c;
    char player='X';
    bool gameover=false;
    int moves=0;
    for(i=0;i<3;i++){
        for(j=0;j<3;j++){
            a[i][j]=' ';

        }
    }

while(!gameover){
    cout<<"Board Status:\n";
    for(int i=0;i<3;i++){
        for(int j=0;j<3;j++){

            cout<<a[i][j];
            if(j<2){
                cout<<"|";
            }
        }
            cout<<endl;
            if(i<2){
                cout<<"=+=+=+"<<endl;
            }
        
        }
            cout<<"Player "<<player<<"Enter which row(1-3)\n";
            cin>>r;
            cout<<"Player "<<player<<"Enter which column(1-3)\n";
            cin>>c;
            r--;
            c--;
            if(r<0||r>2||c<0||c>2||a[r][c]!=' '){
                cout<<"Invalid move!! try again\n";
            }
            
            a[r][c]=player;
            moves++;

          
            
        if(((a[0][0]==player&&a[0][1]==player&&a[0][2]==player)||(a[0][0]==player&&a[1][1]==player&&a[2][2]==player)||(a[0][0]==player&&a[1][0]==player&&a[2][0]==player)||(a[0][1]==player&&a[1][1]==player&&a[2][1]==player)||(a[0][2]==player&&a[1][2]==player&&a[2][2]==player)||(a[1][0]==player&&a[1][1]==player&&a[1][2]==player)||(a[2][0]==player&&a[2][1]==player&&a[2][2]==player)||(a[0][2]==player&&a[1][1]==player&&a[2][0]==player))){
            cout<<"\nPlayer "<<player<<" wins!"<<endl;
            gameover=true;
                
            }
            else if(moves==9){
                cout<<"\nGame Draw";
                gameover=true;
            }
            else{
                if(player=='X'){
                player='O';
            }
            else{
                player='X';
            }


            }
            
        
        }
        
}
